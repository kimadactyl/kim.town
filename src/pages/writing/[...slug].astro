---
import { type CollectionEntry, getCollection, render } from 'astro:content'
import BlogPostLayout from '../../layouts/BlogPostLayout.astro'
import type { MarkdownHeading } from 'astro'

export async function getStaticPaths() {
	const posts = await getCollection('writing')
	const renderedPosts = await Promise.all(
		posts.map(async (post) => {
			const { headings } = await render(post)
			return { post, headings }
		})
	)
	return renderedPosts.map(({ post, headings }) => ({
		params: { slug: post.id },
		props: { post, headings, slug: post.id },
	}))
}

type Props = {
	post: CollectionEntry<'writing'>
	headings: MarkdownHeading[]
	slug: string
}

const { post, headings, slug } = Astro.props
const { Content, remarkPluginFrontmatter } = await render(post)
---

<BlogPostLayout
	{...post.data}
	headings={headings}
	slug={slug}
	remarkPluginFrontmatter={remarkPluginFrontmatter}
>
	<Content />
</BlogPostLayout>
